@model ForumSystem.App.Areas.Admin.ViewModels.Posts.CreatePostBindingModel
@{
    ViewData["Title"] = "Create";
}

<div class="text-center">
    <h1 class="display-4">Create Post</h1>
</div>

<form asp-area="Admin" asp-controller="Posts" asp-action="Create" asp-route-id="@Model.TopicId" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group text-center">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control"/>
        <span asp-validation-for="Title"></span>
    </div>
    <div class="form-group text-center">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control" rows="5" cols="40"></textarea>
        <span asp-validation-for="Content"></span>
    </div>


    <button type="submit" class="btn btn-success m-2"><img src="~/css/icons/icons8-create-post.svg" /> Create Post</button>
    <a asp-area="Admin" asp-controller="Topics" asp-action="Details" asp-route-id="@Model.TopicId" class="btn btn-secondary m-2">
    <img src="~/css/icons/icons8-cancel.svg" alt="Cancel" /> Cancel</a>

</form>