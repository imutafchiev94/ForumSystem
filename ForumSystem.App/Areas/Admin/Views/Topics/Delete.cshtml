@model ForumSystem.App.Areas.Admin.ViewModels.Topics.DeleteTopicViewModel
@{
    ViewData["Title"] = "Delete";
}

    <div class="text-center">
        <h1 class="display-4">Delete</h1>

        <div class="card">
            <div class="card-header">
                <h4>@Model.Title</h4>
            </div>
            <div class="card-body">
                <h4> Really you want to Remove @Model.Title</h4>
                <br />
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-secondary">Close</a>
                <button type="button" id="DeleteTopic" class="btn btn-danger"><i class="fas fa-trash"></i>Delete</button>
            </div>
        </div>
    </div>


    <div id="TopicDeleteModal" class="alert alert-secondary alert-dismissible fade show" role="alert">
        <h6><i class="fa fa-trash"></i> @Model.Title </h6>
        <p>Are you sure?</p>
        <form asp-area="Admin" asp-controller="Topics" asp-action="Delete" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-danger">Yes</button>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">No</button>
        </form>
    </div>


